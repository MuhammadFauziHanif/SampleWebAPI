@model List<SampleMVC.ViewModels.ShoppingCartItem>

<h2>Shopping Cart</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td><a href="@Url.Action("RemoveFromCart", "ShoppingCart", new { productId = item.ProductId })">Remove</a></td>
        </tr>
    }
</table>
